@model DoCongMinh.Models.Product

@{
    ViewData["Title"] = "Xác nhận Xóa";
}

<!-- Page Header (Tiêu đề trang) -->
<div class="page-header fade-in-up">
    <h1>@ViewData["Title"]</h1>
    <p>Hành động này không thể hoàn tác. Vui lòng kiểm tra kỹ.</p>
</div>

<!-- Main Content Card (Thẻ nội dung chính) -->
<div class="demo-card fade-in-up text-center" style="animation-delay: 0.1s;">

    <i class="fa-solid fa-triangle-exclamation fa-4x text-danger mb-3"></i>

    <h3>Bạn có chắc chắn muốn xóa sản phẩm này?</h3>
    <p class="text-muted fs-5">
        Bạn sẽ xóa vĩnh viễn sản phẩm: <strong>@Html.DisplayFor(model => model.Name)</strong>
    </p>
    <hr />

    <dl class="row text-start" style="max-width: 600px; margin: 0 auto;">
        <dt class="col-sm-3">
            Mô tả
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-3">
            Giá
        </dt>
        <dd class="col-sm-9">
            @String.Format("{0:N0} VNĐ", Model.Price)
        </dd>

        <!-- *** MỚI: Thêm Tồn kho *** -->
        <dt class="col-sm-3">
            Tồn kho
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Stock)
        </dd>
    </dl>

    <hr />

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger btn-lg me-2" />
        <a asp-action="Index" class="btn btn-ocean-outline btn-lg">
            <i class="fa-solid fa-times me-2"></i> Hủy
        </a>
    </form>
</div>